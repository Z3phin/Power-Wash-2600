PlaySound subroutine 
	lda SoundType,y
        sta AUDC0,x
        lda SoundVolume,y
        sta AUDV0,x
        lda SoundPitch,y
        sta AUDC0,x
        lda SoundLength,y
        sta SoundOn,x
        rts
        
ProcessSound subroutine
	ldx #1
.soundChnl
	lda SoundOn,x
        beq .soundDone
        dec SoundOn,x
        bne .soundContinue
        lda #0
        sta AUDV0,x
.soundDone
.soundContinue
	dex
        beq .soundChnl
	rts
        
