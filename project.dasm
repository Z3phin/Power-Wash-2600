GameReset subroutine 
	lda #WinFrames
        sta WinFrameCounter
        
        lda AreaBKCol
        sta BKColour
        
        ; Intitial Scores and missile positions
        lda #0
        sta Score0
        sta Score1
        
        ; Set Missiles off? 
        sta MissileVel0
        sta MissileVel1
        
        ; Set Reticles to centre
        lda #ReticleStart
        sta MissileY0
        sta MissileY1
        
        ; Initial Player and missile X positions
        ; Player 0
       	lda #P0StartPos
        sta XPos0
        sta MissileX0
        
        ; Player 1
        lda #P1StartPos
        sta XPos1
        sta MissileX1

	rts
        
GameWin subroutine

	lda SoundOn
        bne .noplay
	;ldy #3
        ;ldx #0
        ;jsr PlaySound
.noplay

	lda WinFrameCounter
        lsr
        lsr
        lsr
        lsr
        lsr
        bcs .PlayerBK
        lda AreaBKCol
        sta BKColour
        jmp .EndChangeColour
.PlayerBK        
        lda Score0
        cmp Score1
        bcc .Player1Win
        bcs .Player0Win
  	jmp .EndChangeColour
.Player1Win
        lda #Player1Colour-3
        sta BKColour
        jmp .EndChangeColour
.Player0Win
        lda #Player0Colour+3
        sta BKColour
.EndChangeColour
        dec WinFrameCounter
        bne .noreset
        
        inc Area
        lda Area
        cmp #NumAreas
        bne .noResetArea
        lda #0
        sta Area
.noResetArea
	lda Area
        tax
        lda DirtColours,x
        sta AreaDirtCol
        lda BackgroundColours,x
        sta AreaBKCol
        
        jsr GameReset
        jsr LoadDirt
        
.noreset 
	rts
        
        
SetUpPtrs subroutine
	lda #<Frame0
        sta SpritePtr0
        lda #>Frame0
        sta SpritePtr0+1
        
        lda #<Frame0
        sta SpritePtr1
        lda #>Frame0
        sta SpritePtr1+1
        
        lda #<ColourPlayer0
        sta ColourPtr0
        lda #>ColourPlayer0
        sta ColourPtr0+1
          
        lda #<ColourPlayer1
        sta ColourPtr1
        lda #>ColourPlayer1
        sta ColourPtr1+1
        
        rts
   
