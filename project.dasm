; Code segment

	seg Code
        org $f000
        
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;	              START
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

Start
	CLEAN_START
        
        ; Temporary setup of dirt
	jsr LoadDirt
        		
        ; Setting Player Sprite Pointers 
        
        jsr SetUpPtrs
        
        lda #WinFrames
        sta WinFrameCounter
        
        lda #0
        sta Area
        
        tax
        
        lda DirtColours,x
        sta AreaDirtCol
        lda BackgroundColours,x
        sta AreaBKCol
        
        lda AreaBKCol
        sta BKColour
        
        ; Intitial Scores and missile positions
        lda #0
        sta Score0
        sta Score1
        
        
        
        ; Set Missiles off? 
        sta MissileVel0
        sta MissileVel1
        

        ; Set Reticles to top
        lda #ReticleStart
        sta MissileY0
        sta MissileY1
        
        ; Initial Player and missile X positions
        ; Player 0
       	lda #P0StartPos
        sta XPos0
        sta MissileX0
        
        ; Player 1
        lda #P1StartPos
        sta XPos1
        sta MissileX1
        
        ; Set delay for displaying P0 until GRP1 is set
        lda #1
        sta VDELP0	
         
        ; Set horizontal positions 
        lda XPos0
        ldx #0
        jsr SetHorizPos
        
        lda XPos1
        ldx #1
        jsr SetHorizPos
        
        ldx #1
        sta WSYNC
        sta HMOVE

NextFrame
        lsr SWCHB	; test Game Reset switch
        bcc Start	; reset?
        
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;	         VERTICAL SYNC
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

        
; 1 + 3 lines of VSYNC
	VERTICAL_SYNC
        
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;	         VERTICAL BLANK
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
        
; 37 lines of underscan
	TIMER_SETUP 37 
        
        jsr ProcessSound
        
      
       	; Setup the scores ready for display  
        lda Score0
        ldx #0
        jsr GetBCDBitmap
        lda Score1
        ldx #5
        jsr GetBCDBitmap
          
        ; Set the horizontal position of players
        lda XPos0
        ldx #0
        jsr SetHorizPos
        
        lda XPos1
        ldx #1
        jsr SetHorizPos
        
        ; Offset the missile0 to the center of sprite0
        lda XPos0
        clc
        adc #4	; Offset
        ldx #2
        jsr SetHorizPos
        
        ; Offset the missile1 to the center of sprite1
        lda XPos1
        clc
        adc #4	; Offset
        ldx #3
        jsr SetHorizPos
        
	; Setup background colour and scoremode ready for scoreboard
        lda #$00
        sta COLUBK
        
        lda #0
        sta CTRLPF	; Symmetry
        
        
        ; Make the missile big if it is Reticle Mode for player 0
        lda MissileVel0
        bmi CursorSize0
        lda #0
        jmp StoreSize0
CursorSize0
	lda #%00011000
StoreSize0
	sta NUSIZ0

	; Make the missile big if it is Reticle Mode for player 1
        lda MissileVel1
        bmi CursorSize1
        lda #0
        jmp StoreSize1
CursorSize1
	lda #%00011000
StoreSize1
	sta NUSIZ1
        
        ; Recolour missile for either Reticle Mode or Stream Mode
        lda MissileVel0
        bmi ReticleColour0
        lda #$af 
        jmp StoreColour0
ReticleColour0
	lda #Player0Colour
StoreColour0
	sta MissileColour0
        
        ; Recolour missile for either Reticle Mode or Stream Mode
        lda MissileVel1
        bmi ReticleColour1
        lda #$af 
        jmp StoreColour1
ReticleColour1
	lda #Player1Colour
StoreColour1
	sta MissileColour1
        
        

        sta WSYNC
        sta HMOVE ; Apply horizontal offset 
       
        TIMER_WAIT
; 192 lines of frame
        
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;	            DRAWING
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; 
	
        TIMER_SETUP 192
        jsr DrawScoreboard
        ldy #7
.buffer 
        sta WSYNC
        dey
        bne .buffer
        
        lda BKColour
        sta COLUBK
        lda AreaDirtCol
        sta COLUPF
                
        lda #0
        sta GRP0
        sta GRP1
        lda MissileColour0
        sta COLUP0
        lda MissileColour1
        sta COLUP1
        
        sta WSYNC
                
        ; PLAYFIELD GRAPHICS LOOP
        ; ------------------
        
        ; Y contains the dirt row we are on.
        ; X contains the scanline we are on.
        
        ldy #$ff ; Start at -1 ; 
        ldx #$ff
DrawLoop
        iny 			; Go to next brick row 
        lda #DirtHeight
        sta DirtHeightCounter
        cpy #NumDirtRows
        bcs DoneDirtDraw
        
        
.innerLoop
	
        ; Enable missiles
        ; -------------------
	
	inx			; increment scanline counter
        stx Temp
        sta WSYNC
        
        lda #0			
        sta PF0
        sta PF1                        
        sta PF2
        
        lda MissileVel0
        bmi .DrawReticle0	
        
        lda MissileY0
        cmp Temp		; If the scanline is more than the Missile Y, disable the missile				
        bcc .EnableMissile0
	jmp .DisableMissile0
.DrawReticle0
	lda MissileY0
        cmp Temp		
        beq .EnableMissile0		
.DisableMissile0
        lda #0
        jmp .Finish0
.EnableMissile0
	lda #2
.Finish0
	sta ENAM0
            
                
        lda MissileVel1
        bmi .DrawReticle1
        
        lda MissileY1
        cmp Temp		; If the scanline is more than the Missile Y, disable the missile				
        bcc .EnableMissile1
	jmp .DisableMissile1
.DrawReticle1
	lda MissileY1
        cmp Temp		
        beq .EnableMissile1		
.DisableMissile1
        lda #0
        jmp .Finish1
.EnableMissile1
	lda #2
.Finish1
	sta ENAM1	
        			              
        cpx #DirtYStart
        bmi .innerLoop		
                           	
        
        ; Next Scanline - draw playfield data - Originally by Steven Hugg
        ; -----------------------------------
        sta WSYNC
        dec DirtHeightCounter	
        
        
        ; HBLANK
        lda Dirt+NumDirtRows*0,y ; 0+12*0,y
        sta PF0
        lda Dirt+NumDirtRows*1,y ; 0+12*1,y	 
        sta PF1
        lda Dirt+NumDirtRows*2,y
        sta PF2			 ; 21 machine cycles - 1 off HBLANK
      	; END HBLANK
      	
        inx			 ; Increment scanline counter	
        	         ; timing
       
        lda Dirt+NumDirtRows*3,y
        sta PF0
        lda Dirt+NumDirtRows*4,y
        sta PF1
        lda Dirt+NumDirtRows*5,y
        sta PF2			 ; 21 machine cycles 
        			 ; TOTAL for PFx is 42 machine cycles. 76 - 42 machine cycles = 34	 
        
        lda DirtHeightCounter
        bne .innerLoop
        beq DrawLoop		; Total 55 machine cycles used here, 21 machine cycles free 

DoneDirtDraw 
	sta WSYNC
        
        ; Turn off missiles and playfield data
  	lda #0
        sta PF0
        sta PF1
        sta PF2
        sta ENAM0
        sta ENAM1
        
 ; DRAW PLAYER LOOP
 ; ----------------
        
        lda #SpriteHeight
        sta Temp
DrawSpriteLoop
	ldy Temp
        
        lda (ColourPtr0),y	; Colour for both lines
        sta ColP0		; A -> ColP0
        lda (SpritePtr0),y	; Bitmap for first line
        sta GRP0		; A -> [GRP0] (delayed due to VDELP0)
        
        lda (ColourPtr1),y
        tax
        lda (SpritePtr1),y
        tay
        
        lda ColP0 
        sta WSYNC
        ; HBLANK
        sty GRP1	;GRP0 also updated due to VDELP0
        
        ; Store the player colours
        stx COLUP1
        sta COLUP0
        
        dec Temp
        
        lda Temp 
        sta WSYNC
        
        bne DrawSpriteLoop
        
        lda #FloorCol
        sta COLUBK
        
        ; TURN OFF PLAYER SPRITES 
        
        lda #0
        sta GRP0
        sta GRP1
     
               
        TIMER_WAIT

; 29 lines of overscan

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;	            OVERSCAN
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

	TIMER_SETUP 29
         		
        ; Skip Collisions in Reticle Mode
        lda MissileVel0
        bmi NoStream0
 	ldx #0
 	jsr MissileCollision
NoStream0
        ; Skip Collisions in Reticle Mode
        lda MissileVel1
        bmi NoStream1
        ldx #1
        jsr MissileCollision
NoStream1 

	; Clear Collisions
        sta CXCLR
        
        jsr TestAllClean
        bmi .noWin
        jsr GameWin
.noWin
        
        ; Read Button Input for next frame
        lda INPT4
	sta MissileVel0
        
        lda INPT5
	sta MissileVel1 
        
        
        ; Read Movement Input
        jsr MoveJoystick0
        jsr MoveJoystick1
        jsr AnimatePlayer0
        jsr AnimatePlayer1
        
        
        inc FrameCounter
        
        TIMER_WAIT
; total = 262 lines, go to next frame
        jmp NextFrame

